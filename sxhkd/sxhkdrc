#
# bspwm hotkeys
#

super + shift + q
    ~/.config/bspwm/bar/clean.sh; \
    bspc quit

super + l
    ~/.lock.sh

super + w
	bspc node -c

super + t
	bspc desktop -l next

super + b
	bspc node -B

super + {s,f}
	bspc node -t {~floating,~fullscreen}

alt + Tab
	bspc desktop -f last

super + apostrophe
	bspc node -s last

super + {o,i}
	bspc control --record-history off; \
	bspc node {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc node -n last.manual

super + m
	bspc node -s biggest

super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

super + {_,shift + }c
	bspc node -f {next,prev}

super + {comma,period}
	bspc node -C {backward,forward}

super + bracket{left,right}
	bspc desktop -f {prev,next}

super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

super + ctrl + {_,shift + }space
	bspc {node -p cancel,desktop -c}

super + alt + {h,j,k,l}
	bspc node -e {left -10,down +10,up -10,right +10}

super + alt + shift + {h,j,k,l}
	bspc node -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
    kind={desktop,monitor}; \
    item="^{1-9,10}"; \
    bspc query --"$kind"s --"$kind" "$\{item\}.focused" > /dev/null && item=last; \
    bspc "$kind" -f "$item"

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	urxvt

super + space
	dmenu_run

super + Tab
    ~/.rofi.sh

super + d
    ~/.drawterm

# Decrease brightness
XF86KbdBrightnessDown
    xbacklight -dec 5

# Increase brightness
XF86KbdBrightnessUp
    xbacklight -inc 5

# Raises volume
XF86AudioRaiseVolume
	amixer set Master 2%+

# Lowers volume
XF86AudioLowerVolume
	amixer set Master 2%-

# Mutes
XF86AudioMute
	amixer set Master toggle

# Play/Pause
XF86AudioPlay
    mpc -q toggle

# Next Song
XF86AudioNext
	mpc next; \
	~/.config/panel/dzen_music 1

# Previous Song
XF86AudioPrev
	mpc prev; \
	~/.config/panel/dzen_music 1

# Stop
XF86AudioStop
    mpc stop

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
